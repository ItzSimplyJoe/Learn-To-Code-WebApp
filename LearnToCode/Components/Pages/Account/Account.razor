@page "/Account"
@inject IJSRuntime JS
@if (User == null)
{
    <p>Loading...</p>
}
else
{
    <div class="w-full h-full bg-grey-100 flex flex-row">

        <Sidebar />

        <div class="gap-6 p-6">

            <div class="w-full">
                <h2 class="text-gray-900 font-semibold text-3xl">
                    User Settings
                </h2>
            </div>
            <div class="flex flex-col lg:flex-row gap-6">
                <div class="w-3/4 flex flex-col gap-6">
                    <div class="bg-white w-full shadow-md rounded-lg p-8 justify-start items-center flex flex-col md:flex-row">
                        <div class="w-24 h-24 flex justify-center items-center bg-red-200">
                            JB
                        </div>

                        <div class="flex flex-col gap-4">
                            <h3 class="text-gray-800">@User?.Name</h3>
                            <p class="text-gray-500">Job Role</p>
                            <div class="bg-white w-full shadow-md rounded-lg p-8 justify-start items-center flex flex-col md:flex-row">
                            <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                                Change PFP
                            </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="w-full flex flex-col gap-6">

                </div>
            </div>
        </div>
    </div>
}
