<header class="absolute inset-x-0 top-0 z-50">
    <nav class="flex items-center justify-between p-6 lg:px-8" aria-label="Global">
        <div class="flex lg:flex-1">
            <NavLink href="/" class="-m-1.5 p-1.5">
                <span class="sr-only">The Developer Hub</span>
                <img class="w-16 h-auto" src="/Images/LogoLightTheme.png" alt="">
            </NavLink>
        </div>
        <div class="flex lg:hidden">
            <button type="button" mobileMenuToggle class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
                <span class="sr-only">Open main menu</span>
                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                </svg>
            </button>
        </div>
        <div class="hidden lg:flex lg:gap-x-12">
            <NavLink href="/about" class="text-sm font-semibold leading-6 text-gray-900">About</NavLink>
            <NavLink href="/features" class="text-sm font-semibold leading-6 text-gray-900">Features</NavLink>
            <NavLink href="/contact" class="text-sm font-semibold leading-6 text-gray-900">Contact</NavLink>
        </div>
        <div class="hidden lg:flex lg:flex-1 lg:justify-end gap-8">
            <AuthorizeView>
                <Authorized>
                    <NavLink href="/dashboard" class="text-sm font-semibold leading-6 text-gray-900">Dashboard</NavLink>
                    <NavLink href="/Account" class="text-sm font-semibold leading-6 text-gray-900">Account</NavLink>
                </Authorized>
                <NotAuthorized>
                    <NavLink href="/login" class="text-sm font-semibold leading-6 text-gray-900">Log in <span aria-hidden="true">&rarr;</span></NavLink>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </nav>
    <!-- Mobile menu, show/hide based on menu open state. -->
    <div class="lg:hidden hidden" role="dialog" aria-modal="true" mobileNavMenu>
        <!-- Background backdrop, show/hide based on slide-over state. -->
        <div class="fixed inset-0 z-50"></div>
        <div class="fixed inset-y-0 right-0 z-50 w-full overflow-y-auto bg-white px-6 py-6 sm:max-w-sm sm:ring-1 sm:ring-gray-900/10">
            <div class="flex items-center justify-between">
                <NavLink href="/" class="-m-1.5 p-1.5">
                    <span class="sr-only">The Developer Hub</span>
                    <img class="w-16 h-auto" src="/Images/LogoLightTheme.png" alt="">
                </NavLink>
                <button type="button" class="-m-2.5 rounded-md p-2.5 text-gray-700" mobileMenuToggle>
                    <span class="sr-only">Close menu</span>
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="mt-6 flow-root">
                <div class="-my-6 divide-y divide-gray-500/10">
                    <div class="space-y-2 py-6">
                        <NavLink href="/about" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">About</NavLink>
                        <NavLink href="/features" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Features</NavLink>
                        <NavLink href="/contact" class="-mx-3 block rounded-lg px-3 py-2 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Contact</NavLink>
                    </div>
                    <div class="py-6">
                        <AuthorizeView>
                            <Authorized>
                                <NavLink href="/dashboard" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Dashboard</NavLink>
                                <NavLink href="/Account" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Account</NavLink>
                            </Authorized>
                            <NotAuthorized>
                                <NavLink href="/login" class="-mx-3 block rounded-lg px-3 py-2.5 text-base font-semibold leading-7 text-gray-900 hover:bg-gray-50">Log in</NavLink>
                            </NotAuthorized>
                        </AuthorizeView>
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>

<script>
    document.querySelectorAll("[mobileMenuToggle]").forEach(function (el) {
        el.addEventListener('click', function () {
            document.querySelector('[mobileNavMenu]').classList.toggle('hidden');
        });
    });
</script>